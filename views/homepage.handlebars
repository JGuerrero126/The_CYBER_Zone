{{#if blogs}}
  {{#each blogs as |blog|}}
    <div data-id="{{id}}" class="card">
      <a href="/blogs/{{id}}">
        <h5 class="card-header">{{title}}</h5>
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
        <div class="card-body">
          <p class="card-text">{{text}}</p>
        </div>
      </a>
    </div>
  {{/each}}
{{else}}
  <h5>There are no blogs currently saved. Why not add one?</h5>
{{/if}}